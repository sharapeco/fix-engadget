{
  "manifest_version": 2,
  "name": "Fix Engadget",
  "author": "sharapeco",
  "version": "1.0",
  "description": "Fix broken redirects in Engadget.",
  "icons": {
    "48": "icons/48.png"
  },
  "background": {
    "scripts": ["background.js"],
	"persistent": false
  },
  "permissions": [
    "webRequest",
	"webRequestBlocking",
    "*://www.engadget.com/*",
    "*://japanese.engadget.com/*"
  ]
}
